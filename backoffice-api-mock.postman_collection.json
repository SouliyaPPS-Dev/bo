        {
          "name": "POST Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "let token = \"\";",
                  "try {",
                  "  const body = pm.response.json();",
                  "  token = body.accessToken",
                  "    || body.token",
                  "    || (body.data && (body.data.accessToken || body.data.token))",
                  "    || \"\";",
                  "} catch (error) {",
                  "  console.warn(\"Unable to parse login response\", error);",
                  "}",
                  "if (token) {",
                  "  pm.collectionVariables.set(\"accessToken\", token);",
                  "  pm.collectionVariables.set(\"authToken\", token);",
                  "  pm.test(\"Stored access token\", function () {",
                  "    pm.expect(token.length).to.be.greaterThan(0);",
                  "  });",
                  "} else {",
                  "  pm.collectionVariables.unset(\"accessToken\");",
                  "  pm.collectionVariables.unset(\"authToken\");",
                  "  pm.test(\"Access token missing\", function () {",
                  "    pm.expect(token, \"token\").to.be.a(\"string\").that.is.not.empty;",
                  "  });",
                  "}"
                ]
              }
            }
          ],
